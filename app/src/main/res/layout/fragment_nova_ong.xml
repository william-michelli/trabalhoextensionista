<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".novaong.NovaOngFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <!-- Id-->
        <EditText
            android:id="@+id/txtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="25dp"
            android:visibility="gone"/>


        <!-- Nome-->
        <TextView
            android:id="@+id/lblNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/lbl_nome" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapWords|textAutoComplete|textAutoCorrect"
            android:layout_marginBottom="25dp"
            android:minHeight="48dp"
            android:hint="@string/insira_o_nome" />


        <!-- Observações-->
        <TextView
            android:id="@+id/lblDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/lbl_descricao" />

        <EditText
            android:id="@+id/txtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapSentences|textAutoComplete|textAutoCorrect"
            android:layout_marginBottom="25dp"
            android:minHeight="48dp"
            android:hint="@string/insira_a_descricao" />


        <!-- Necessidades-->
        <TextView
            android:id="@+id/lblNecessidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/lbl_descricao" />

        <EditText
            android:id="@+id/txtNecessidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapSentences|textAutoComplete|textAutoCorrect"
            android:layout_marginBottom="25dp"
            android:minHeight="48dp"
            android:hint="@string/insira_as_necessidades" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>